<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dhanifudin.popularmovie2.MovieDetailActivity"
    >

    <ImageView
        android:id="@+id/image_backdrop"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/backdrop_description"
        />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_backdrop"
        android:background="#CC424242"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/image_backdrop"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >
            <ImageView
                android:id="@+id/image_poster"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:padding="8dp"
                android:contentDescription="@string/poster_description"
                />
            <TextView
                android:id="@+id/text_original_title"
                android:layout_toEndOf="@id/image_poster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/text_release"
                android:layout_below="@id/text_original_title"
                android:layout_toEndOf="@id/image_poster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                />
            <RatingBar
                android:id="@+id/rating_movie"
                android:layout_below="@id/text_release"
                android:layout_toEndOf="@id/image_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                style="?attr/ratingBarStyleSmall"
                />
            <TextView
                android:id="@+id/text_information"
                android:layout_below="@id/rating_movie"
                android:layout_toEndOf="@id/image_poster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <Button
                android:id="@+id/button_favorite"
                android:layout_below="@id/text_information"
                android:layout_toEndOf="@id/image_poster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimary"
                tools:text="Add as Favorite"
                />

            <View
                android:id="@+id/view_separator"
                android:layout_below="@id/image_poster"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                android:layout_margin="2dp"
                />

            <TextView
                android:id="@+id/text_overview"
                android:layout_below="@id/view_separator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                />

            <TextView
                android:id="@+id/text_trailer"
                android:layout_below="@+id/text_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/trailer_title"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/trailer_list"
                android:layout_below="@id/text_trailer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/text_review"
                android:layout_below="@+id/trailer_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/review_title"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/review_list"
                android:layout_below="@id/text_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
